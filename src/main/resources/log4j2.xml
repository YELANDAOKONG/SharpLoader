<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" formatMsgNoLookups="true">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
<!--            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p &lt;%c{1}&gt; - %m%n"/>-->
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t/%-p(%c)]: %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>